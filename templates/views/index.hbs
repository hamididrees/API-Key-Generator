    <div class="container my-5">
        <p class="lead mx-5">
            Please, sign up to use our fast and easy-to-work Data APIs.
            As a start to use API products, 
            we recommend our One Call API 3.0. For more functionality, 
            please consider our products, which are included in professional collections.
        </p>
        <div class="text-11">
            <div class="text-1-box HTML">
                <div class="text-12">API Url</div>
                <textarea id="myInput" readonly >http://localhost:8000/students/</textarea>
                <button id="HTMLButton" onclick="myFunction()" onmouseout="outFunc()">
                    <span class="tooltiptext" id="myTooltip">Copy to clipboard</span>
                </button>
            </div>
         </div>
    </div>
    
    <script>
        function myFunction() {
            var copyText = document.getElementById("myInput");
            copyText.select();
            navigator.clipboard.writeText(copyText.value);
            
            var tooltip = document.getElementById("myTooltip");
            tooltip.innerHTML = "Text Copied"; //+ copyText.value
        }

        function outFunc() {
            var tooltip = document.getElementById("myTooltip");
            tooltip.innerHTML = "Copy to clipboard";
        }
    </script>
